@using web_BookStore_Toan.Models;
@model List<SACH>
@{
    ViewBag.Title = "SPTheoNxb";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}



@{
    foreach (var item in Model)
    {
        <div class="product-single">
            <div class="product-thumbnail">
                <a href=" @Url.Action("XemChiTietsp", "BookStore", new { Masach = item.Masach }) "><img src="~/Content/img/@item.Anhbia" alt="@item.Tensach"></a>
                <div class="product-thumbnail-overly">
                    <ul>
                        <li><a href="cart.html"><i class="fas fa-shopping-cart"></i></a></li>
                        <li><a href="wishlist.html"><i class="far fa-heart"></i></a></li>
                        <li><a href="#"><i class="far fa-eye"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="product-content">
                <h4><a href="@Url.Action("XemChiTietsp", "BookStore", new {Masach=item.Masach})">@item.Tensach</a></h4>
                <div class="pricing">
                    <span> @item.Giaban</span>
                </div>
            </div>
        </div>

    }
}




